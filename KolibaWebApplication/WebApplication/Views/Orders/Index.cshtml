@using WebApplication.Models
@model Order


@{
    ViewBag.Title = "Your Orders";
}


@Styles.Render("~/Content/order");
@Scripts.Render("~/bundles/jquery");
@Scripts.Render("~/bundles/order");


<div style="background-size: cover; height: 100%; width: 100%; background-color:#222">

    @if (ViewBag.errMsg != null && ViewBag.errMsg != "")
    {
        <h3 style="font-weight: lighter; color: orangered; text-align: center; margin-bottom:20px">@ViewBag.errMsg</h3>
    }
    else
    {
    <div class="content">


        <h2>Porudžbina:</h2>
        <hr />
        @if (Model.Meals.Count > 0)
        {
        <h4>Hrana:</h4>
        <table class="table">
            <tr>
                <th>Naziv</th>
                <th>Kolicina</th>
                <th>Cena</th>
                <th></th>
            </tr>
            @foreach (Meal meal in Model.Meals)
            {
                <tr>
                    <td style="text-transform: capitalize; color: navajowhite;">
                        @meal.Name
                    </td>
                    <td style="color: navajowhite; text-align:center">
                        @meal.Quantity gr
                    </td>
                    <td style="text-align: end; color: navajowhite;">
                        @*@meal.CalculatePrice() din*@
                        @meal.Price din
                    </td>
                    <td>
                        <button class="btn-custom"><i class="fa fa-times" aria-hidden="true"></i></button>
                    </td>
                </tr>
            }
        </table>
        }
        @if (Model.Drinks.Count > 0)
        {
        <hr />
        <h4>Piće:</h4>
        <table class="table">
            <tr>
                <th>Naziv</th>
                <th>Kolicina</th>
                <th>Cena</th>
                <th></th>
            </tr>
            @foreach (Drink drink in Model.Drinks)
            {
                <tr>
                    <td style="text-transform: capitalize; color: navajowhite;">
                        @drink.Name
                    </td>
                    <td style="color: navajowhite; text-align:center">
                        @drink.Quantity kom
                    </td>
                    <td style="text-align: end; color: navajowhite;">
                        @*@meal.CalculatePrice() din*@
                        @drink.Price din
                    </td>
                    <td>
                        <button class="btn-custom"><i class="fa fa-times" aria-hidden="true"></i></button>
                    </td>
                </tr>
            }
        </table>
        }

    </div>
    }

</div>